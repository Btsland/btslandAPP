<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.btsland.app.UserActivity">

    <View
        android:id="@+id/v_user_back"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:background="@color/color_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_user_pho"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_user_back"
        app:layout_constraintTop_toTopOf="@+id/v_user_back"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="用户名"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_pho"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_anotherName"
        app:layout_constraintLeft_toLeftOf="@+id/v_user_back" />
    <TextView
        android:id="@+id/tv_user_anotherName"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="别名"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_user_back"
        app:layout_constraintBottom_toBottomOf="@+id/v_user_back" />
    <TextView
        android:id="@+id/tv_user_info"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="个人信息"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/v_user_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_user_whiteList"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="白名单"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_user_power"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="权限"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_whiteList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_user_recent"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="近期活动"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_power"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_user_entrust"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="委单"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_recent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_user_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户设置"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
